package com.company;

public class City {
    private int population;

    private String name;
    public static final Long MAX_NUMBER_OF_PEOPLE = 1000000000L;

    public City(int myPopulation, String myName) {
        this.name = myName;
        this.population = myPopulation;
    }

    public City() {
        this.name = "Grodno";
        this.population = 300000;
    }

    public void PrintInfo() {

        System.out.println("Tne name of city is " + this.name);
        System.out.println("The city's population are " + this.population);
        System.out.println("The biggest number of people living in cities of Belarus are " + MAX_NUMBER_OF_PEOPLE);
    }
}
